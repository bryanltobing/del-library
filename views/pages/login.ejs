<!DOCTYPE html>
<html lang="en">
    
    <%- include('../partials/head') %>

    <body>
        
        <!-- Start: Header Section -->
        <%- include('../partials/navbar') %>
        <!-- End: Header Section -->
        
        <!-- Start: Page Banner -->
        <section class="page-banner services-banner">
            <div class="container">
                <div class="banner-header">
                    <h2>Login</h2>
                    <span class="underline center"></span>
                    <p class="lead">Login untuk mengakses aplikasi</p>
                </div>
                <div class="breadcrumb">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li>Login</li>
                    </ul>
                </div>
            </div>
        </section>
        <!-- End: Page Banner -->
        <!-- Start: Cart Section -->

        
        <div class="container" style="margin-top: 30px; margin-bottom: 50px;  background-color: #282828; padding: 50px">
            <h1 class="text-center" style="color: #158bd3; margin: 30px;">LOGIN HERE</h1>
            <div class="row">
                <div class="col-md-12">
                    <form class="form-horizontal" action="/user/login" method="POST">
                        <div class="form-group">
                          <label class="control-label col-sm-2" for="email" style="color:white;">Email:</label>
                          <div class="col-sm-10">
                            <input  type="email" required 
                            oninvalid="this.setCustomValidity('Isi format email dengan benar')"
                            oninput="this.setCustomValidity('')" name="email" class="form-control" id="email" placeholder="Enter email" style="background-color: #202020; color: gray; border-color: #202020 ;">
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="control-label col-sm-2" for="pwd" style="color:white;">Password:</label>
                          <div class="col-sm-10">
                            <input type="password" required 
                            oninvalid="this.setCustomValidity('Isi password disini')"
                            oninput="this.setCustomValidity('')" class="form-control" name="password" id="pwd" placeholder="Enter password" style="background-color: #202020; color: gray; border-color: #202020 ;">
                          </div>
                        </div>
                        <div class="form-group">
                          <div class="col-sm-offset-2 col-sm-10">
                          </div>
                        </div>
                        <div class="form-group">
                          <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" name="submit" class="btn btn-default" style="background-color: #158bd3; border: none; color: white;">LOGIN</button>
                          </div>
                        </div>
                      </form>
                      
                </div>
            </div>
        </div>
        <!-- End: Cart Section -->
        
        <!-- Start: Footer -->
        <%- include('../partials/footer') %>

        <!-- End: Footer -->
        
        <%- include('../partials/footscript') %>

    </body>
    <% if (messages.error) { %>
      <script>
        swal({
          title : "<%= messages.error %>",
          icon: "error",
          text : "failed to login",
          button: "Okay",
        });
      </script>
    <%}%>
    <% if (errorAuth.length !== 0) { %>
      <script>
        swal({
          title : "<%= errorAuth %>",
          icon: "warning",
          text : "Login First",
          button: "Okay",
        });
      </script>
    <%}%>

</html>

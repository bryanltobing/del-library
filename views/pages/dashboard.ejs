<!DOCTYPE html>
<html lang="en">
    
    <%- include('../partials/head') %>
    <style>
        .flipcard:hover {
            border: 1px solid black !important;
            transition: all;
            transition-duration: 0.5s;
        }

        .buttonDetail {
            background-color: #1087cf;
            padding: 8px;
            font-size: 13px;
            text-transform: capitalize;
        }
    </style>
    <body>
        <!-- Start: Header Section -->
        <%- include('../partials/navbar') %>
        <!-- End: Header Section -->
        
        <!-- Start: Page Banner -->
        <section class="page-banner services-banner">
            <div class="container">
                <div class="banner-header">
                    <h2>Welcome</h2>
                    <span class="underline center"></span>
                    <p class="lead"><%= name %></p>
                </div>
                <div class="breadcrumb">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li>Dashboard</li>
                    </ul>
                </div>
            </div>
        </section>
        <!-- End: Page Banner -->

        <!--APPLICATION MENU -->
        <div class="container" style="padding: 30px;">
            <div class="clearfix"></div>
                <div class="contact-location">
                    <div class="flipcard" style="border: 4px solid white;">
                        <a href="/user/profil">
                            <div class="front">
                                <div class="top-info dark-bg">
                                    <h3><i class="fa fa-user" aria-hidden="true"></i><span>Profil Info</span></h3>
                                </div>
                                <div class="bottom-info">
                                    <span class="top-arrow"></span>
                                    <button style="color: white;" class="buttonDetail">Detail <i class="fa fa-long-arrow-right" aria-hidden="true"></i></button>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% if(user.role == "Mahasiswa") {%>
                        <div class="flipcard" style="border: 4px solid white;">
                            <a href="/user/request-library-card">
                                <div class="front">
                                    <div class="top-info dark-bg">
                                        <h3><i class="fa fa-credit-card" aria-hidden="true"></i><span>Request Library Card</span></h3>
                                    </div>
                                    <div class="bottom-info">
                                        <span class="top-arrow"></span>
                                        <button style="color: white;" class="buttonDetail">Detail <i class="fa fa-long-arrow-right" aria-hidden="true"></i></button>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="flipcard" style="border: 4px solid white;">
                            <a href="/user/pinjambuku">
                                <div class="front">
                                    <div class="top-info dark-bg">
                                        <h3><i class="fa fa-user" aria-hidden="true"></i><span>Pinjaman Buku</span></h3>
                                    </div>
                                    <div class="bottom-info">
                                        <span class="top-arrow"></span>
                                        <button style="color: white;" class="buttonDetail">Detail <i class="fa fa-long-arrow-right" aria-hidden="true"></i></button>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <%}%>
                    <% if(user.role == "Dosen") {%>
                        <div class="flipcard" style="border: 4px solid white;">
                            <a href="/user/pinjambuku">
                                <div class="front">
                                    <div class="top-info dark-bg">
                                        <h3><i class="fa fa-user" aria-hidden="true"></i><span>Pinjaman Buku</span></h3>
                                    </div>
                                    <div class="bottom-info">
                                        <span class="top-arrow"></span>
                                        <button style="color: white;" class="buttonDetail">Detail <i class="fa fa-long-arrow-right" aria-hidden="true"></i></button>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <%}%>
                    
                    <% if(user.role == "Librarian") {%>
                        <div class="flipcard" style="border: 4px solid white;">
                            <a href="/user/request-card-list">
                                <div class="front">
                                    <div class="top-info dark-bg">
                                        <h3><i class="fa fa-credit-card" aria-hidden="true"></i><span>Request Card List</span></h3>
                                    </div>
                                    <div class="bottom-info">
                                        <span class="top-arrow"></span>
                                        <button style="color: white;" class="buttonDetail">Detail <i class="fa fa-long-arrow-right" aria-hidden="true"></i></button>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="flipcard" style="border: 4px solid white;">
                            <a href="/user/addmedia-menu">
                                <div class="front">
                                    <div class="top-info dark-bg">
                                        <h3><i class="fa fa-user" aria-hidden="true"></i><span>Add Media</span></h3>
                                    </div>
                                    <div class="bottom-info">
                                        <span class="top-arrow"></span>
                                        <button style="color: white;" class="buttonDetail">Detail <i class="fa fa-long-arrow-right" aria-hidden="true"></i></button>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="flipcard" style="border: 4px solid white;">
                            <a href="/user/pengaturan">
                                <div class="front">
                                    <div class="top-info dark-bg">
                                        <h3><i class="fa fa-user" aria-hidden="true"></i><span>List Media Pengaturan</span></h3>
                                    </div>
                                    <div class="bottom-info">
                                        <span class="top-arrow"></span>
                                        <button style="color: white;" class="buttonDetail">Detail <i class="fa fa-long-arrow-right" aria-hidden="true"></i></button>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="flipcard" style="border: 4px solid white;">
                            <a href="/user/pinjambuku/list">
                                <div class="front">
                                    <div class="top-info dark-bg">
                                        <h3><i class="fa fa-user" aria-hidden="true"></i><span>Request Book List</span></h3>
                                    </div>
                                    <div class="bottom-info">
                                        <span class="top-arrow"></span>
                                        <button style="color: white;" class="buttonDetail">Detail <i class="fa fa-long-arrow-right" aria-hidden="true"></i></button>
                                    </div>
                                </div>
                            </a>
                        </div>
                        
                    <% } %>
                    

                    <div class="clearfix"></div>
                </div>
        </div>
        
        <!-- Start: Footer -->
        <%- include('../partials/footer') %>

        <!-- End: Footer -->
        
        <%- include('../partials/footscript') %>

        <% if (messages.success) { %>
            <script>
                swal({
                  title : "<%= messages.success %>",
                  icon: "success",
                  text : "Welcome <%= name %>",
                  button: "Okay",
                });
              </script>
        <%}%>

        
    </body>


</html>

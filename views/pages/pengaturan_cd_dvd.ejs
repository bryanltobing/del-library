    <!-- Start: Cart Section -->
    <div id="content" class="site-content">
        <div id="primary" class="content-area">
            <main id="main" class="site-main">
                <div class="cart-main">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <h4 style="font-size: 30px;" class="widget-title text-center" data-control>Pengaturan CD/DVD</h4>
                                <form action="/user/pengaturan/cd-dvd" method="get" style="margin-top: 30px;">
                                    <div class="container">
                                        <div class="col-md-10">
                                            <div class="form-group">
                                                <input type="text" class="form-control" name="keywords" id="" placeholder="Cari judul atau sumber">
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <input type="submit" class="form-control" value="Cari">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <div class="container">
                                    <% if(keywords){%>
                                        <p> You searched for : <span style="font-weight: bold;"><%= keywords%></span></p>
                                    <%}%> 
                                </div>
                                <div class="page type-page status-publish hentry">
                                    <div class="entry-content">
                                        <div class="woocommerce table-tabs" id="responsiveTabs">
                                            <div class="tab-content">
                                                <div id="sectionA" class="tab-pane fade in active">
                                                    <table class="table table-bordered shop_table cart">
                                                        <thead>
                                                            <tr id="one">
                                                                <th class="product-name">CD/DVD</th>
                                                                <th class="product-quantity">Action</th>
                                                                <th class="product-price">Deskripsi </th>                                                                
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% data.forEach((d, i) => { %>
                                                                <tr class="cart_item">
                                                                    <td data-title="Product" class="product-name">
                                                                        <span class="product-thumbnail">
                                                                            
                                                                        </span>
                                                                        <span class="product-detail">
                                                                            <a href="#" data-toggle="modal" data-target="#myModal<%=i%>"><strong class="judul" style="text-transform: capitalize;"><%= d.judul %></strong></a>
                                                                            <span><strong>Sumber:</strong> <%= d.sumber %></span>
                                                                            <span><strong>Prodi Pemilik:</strong> <%= d.prodiPemilik %></span>
                                                                            <span><strong>
                                                                                Status:</strong>
                                                                                <% if(d.status ==- 0) {%>
                                                                                    <span style="color:green; font-weight: bold;">Tersedia</span>
                                                                                <%} else {%>
                                                                                    <span style="color: red; font-weight: bold;">Tersedia</span>
                                                                                <%}%>
                                                                            </span>
                                                                        </span>
                                                                    </td>
                                                                    <td data-title="action" class="product-action">
                                                                        <div class="dropdown" style="margin: 10px;">
                                                                            <a href="#" data-toggle="modal" data-target="#myModal<%=i%>" class="btn btn-dark-gray">Update</a>
                                                                                <!-- Modal -->
                                                                                <div class="modal fade" id="myModal<%=i%>" role="dialog">
                                                                                    <div class="modal-dialog modal-lg">
                                                                                        <!-- Modal content-->
                                                                                        <div class="modal-content">
                                                                                            <div class="modal-header">
                                                                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                                                <h4 class="modal-title" style="color : #3e97cc; text-transform: capitalize;">
                                                                                                    <span style="color: black; font-weight: normal;">Update:</span> <%= d.judul%>
                                                                                                </h4>
                                                                                            </div>
                                                                                            <div class="modal-body" style="text-transform: capitalize;">
                                                                                                <form action="/user/pengaturan/update-dvd/<%= d._id %>?_method=PATCH" method="POST" class="updateForm">
                                                                                                    <div class="row">
                                                                                                        <div class="col-md-6 col-sm-6">
                                                                                                            <div class="form-group">
                                                                                                                <input class="form-control" type="text" placeholder="Judul CD/DVD" name="judul" id="judul<%=i%>" size="30" value="<%= d.judul %>" aria-required="true"/>
                                                                                                            </div>
                                                                                                        </div>
                                                                                                        <div class="col-md-6 col-sm-6">
                                                                                                            <div class="form-group">
                                                                                                                <input class="form-control" type="text" placeholder="Sumber..." name="sumber" id="sumber<%=i%>" size="30" value="<%= d.sumber %>" aria-required="true"/>
                                                                                                            </div>
                                                                                                        </div>
                                                                                                        <div class="col-md-6 col-sm-6">
                                                                                                            <fieldset class="form-group">
                                                                                                                <div class="row">
                                                                                                                  <legend class="col-form-label col-sm-2 pt-0">Prodi</legend>
                                                                                                                  <div class="col-sm-10">
                                                                                                                    <div class="form-check">
                                                                                                                      <input class="form-check-input" type="radio" name="prodiPemilik" id="prodi1" value="D3 Teknologi Informasi">
                                                                                                                      <label class="form-check-label" for="prodi1">
                                                                                                                        D3 Teknologi Informasi
                                                                                                                      </label>
                                                                                                                    </div>
                                                                                                                    <div class="form-check">
                                                                                                                      <input class="form-check-input" type="radio" name="prodiPemilik" id="prodi2" value="D3 Teknologi Komputer">
                                                                                                                      <label class="form-check-label" for="prodi2">
                                                                                                                        D3 Teknologi Komputer
                                                                                                                      </label>
                                                                                                                    </div>
                                                                                                                    <div class="form-check">
                                                                                                                      <input class="form-check-input" type="radio" name="prodiPemilik" id="prodi3" value="D4 Teknologi Rekayasa Perangkat Lunak">
                                                                                                                      <label class="form-check-label" for="prodi3">
                                                                                                                        D4 Teknologi Rekayasa Perangkat Lunak
                                                                                                                      </label>
                                                                                                                    </div>
                                                                                                                    <div class="form-check">
                                                                                                                      <input class="form-check-input" type="radio" name="prodiPemilik" id="prodi4" value="S1 Informatika">
                                                                                                                      <label class="form-check-label" for="prodi4">
                                                                                                                        S1 Informatika
                                                                                                                      </label>
                                                                                                                    </div>
                                                                                                                    <div class="form-check">
                                                                                                                      <input class="form-check-input" type="radio" name="prodiPemilik" id="prodi5" value="S1 Sistem Informasi">
                                                                                                                      <label class="form-check-label" for="prodi5">
                                                                                                                        S1 Sistem Informasi
                                                                                                                      </label>
                                                                                                                    </div>
                                                                                                                    <div class="form-check">
                                                                                                                      <input class="form-check-input" type="radio" name="prodiPemilik" id="prodi6" value="S1 Teknik Elektro">
                                                                                                                      <label class="form-check-label" for="prodi6">
                                                                                                                        S1 Teknik Elektro
                                                                                                                      </label>
                                                                                                                    </div>
                                                                                                                    <div class="form-check">
                                                                                                                      <input class="form-check-input" type="radio" name="prodiPemilik" id="prodi7" value="S1 Teknik Bioproses">
                                                                                                                      <label class="form-check-label" for="prodi7">
                                                                                                                        S1 Teknik Bioproses
                                                                                                                      </label>
                                                                                                                    </div>
                                                                                                                  </div>
                                                                                                                </div>
                                                                                                              </fieldset>
                                                                                                        </div>
                                                                                                        
                                                                                                        <div class="col-sm-12">
                                                                                                            <div class="form-group">
                                                                                                                <textarea class="form-control" placeholder="Deskripsi CD" id="keterangan<%=i%>" name="keterangan" rows="15" aria-required="true"><%= d.keterangan%></textarea>
                                                                                                                <div class="clearfix"></div>
                                                                                                            </div>
                                                                                                        </div>
                                                                                                        <div class="col-sm-12">
                                                                                                            <div class="form-group form-submit">
                                                                                                                <input style="background-color: black;" class="btn btn-default" id="update-dvd-form<%=i%>" type="submit" name="submit" value="Update CD/DVD"  />
                                                                                                            </div>
                                                                                                        </div>
                                                                    
                                                                                                    </div>
                                                                                                </form>
                                                                                            </div>
                                                                                            <div class="modal-footer">
                                                                                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                                                            </div>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                                <form action="/user/pengaturan/delete-dvd/<%= d._id %>?_method=DELETE" style="display: inline;" class="deleteForm" method="POST">
                                                                                    <button type="submit" name="delete" id="danger" class="btn btn-danger text-light deleteButton">Delete</button>
                                                                                </form>
                                                                        </div>
                                                                        <div class="addition-action">
                                                                            <small></small>
                                                                            <ul>
                                                                                <li></li>
                                                                            </ul>
                                                                        </div>
                                                                    </td>
                                                                    <td data-title="Price" class="product-price">
                                                                        <p class="keterangan"><%= d.keterangan %></p>
                                                                    </td>
                                                                </tr>
                                                            <%})%>
                                                        </tbody>
                                                    </table>
                                                    <% if(count<1) {%>
                                                        <p>Hasil tidak ditemukan</p>
                                                    <%}%>
                                                    <div class="container" style="margin: 30px 0px 30px -10px;">
                                                        <nav class="navigation pagination text-center">
                                                            <h2 class="screen-reader-text">Posts navigation</h2>
                                                            <div class="nav-links">
                                                                <% if (pages > 0) { %>
                                                                    <ul class="pagination text-center">
                                                                        <% if (current == 1) { %>
                                                                            <li class="disabled"><a>First</a></li>
                                                                        <% } else { %>
                                                                            <% if(!keywords) {%>
                                                                                <li><a href="/user/pengaturan/cd-dvd/1">First</a></li>
                                                                            <%} else {%>
                                                                                <li><a href="/user/pengaturan/cd-dvd/1?keywords=<%=keywords%>">First</a></li>
                                                                            <%}%>
                                                                        <% } %>
                                                                        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                                                                        <% if (i !== 1) { %>
                                                                            <li class="disabled"><a>...</a></li>
                                                                        <% } %>
                                                                        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                                                                            <% if (i == current) { %>
                                                                                <li class="active"><a><%= i %></a></li>
                                                                            <% } else { %>
                                                                                <% if(!keywords) {%>
                                                                                    <li><a href="/user/pengaturan/cd-dvd/<%= i %>"><%= i %></a></li>
                                                                                <%} else {%>
                                                                                    <li><a href="/user/pengaturan/cd-dvd/<%= i %>?keywords=<%=keywords%>"><%= i %></a></li>
                                                                                <%}%>
                                                                            <% } %>
                                                                            <% if (i == Number(current) + 4 && i < pages) { %>
                                                                                <li class="disabled"><a>...</a></li>
                                                                            <% } %>
                                                                        <% } %>
                                                                        <% if (current == pages) { %>
                                                                            <li class="disabled"><a>Last</a></li>
                                                                        <% } else { %>
                                                                            <% if(!keywords) {%>
                                                                                <li><a href="/user/pengaturan/cd-dvd/<%= pages %>">Last</a></li>
                                                                            <%} else {%>
                                                                                <li><a href="/user/pengaturan/cd-dvd/<%= pages %>?keywords=<%=keywords%>">Last</a></li>
                                                                            <%}%>
                                                                        <% } %>
                                                                    </ul>
                                                                <% } %>
                                                            </div>
                                                        </nav>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div><!-- .entry-content -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <!-- End: Cart Section -->

    



    <%- include('../partials/footer') %>

    <%- include('../partials/footscript') %>


    <script>
        
        const form = document.querySelectorAll('.updateForm');

        form.forEach((theform, index) => {
            
            $(`#update-dvd-form${index}`).on('click', function () {
                console.log("wow");
                if ($(`#judul${index}`).val() === '' ||  $(`#sumber${index}`).val() === '' || $(`#keterangan${index}`).val() === '' ) {
                    swal({
                        title : "Warning",
                        icon: "warning",
                        text : "Data seluruh form wajib diisi",
                        button: "Okay",
                    });
                    return false;
                } 

                return true;
            });
        });
        


        const buttonDelete =  document.querySelectorAll('.deleteButton');
        buttonDelete.forEach((button, i) => {
            button.addEventListener('click', (e) => {
                e.preventDefault();
                swal({
                    title: "Are you sure?",
                    text: "Data akan dihapus secara permanen dan tidak dapat dipulihkan",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                })
                .then((willDelete) => {
                    if (willDelete) {
                        var form = document.querySelectorAll(".deleteForm");
                        form[i].submit();
                    } else {
                        return false;
                    }
                });
            });
        });

    </script>



    <script>
        function truncateText(selector, maxLength) {
            var element = document.querySelectorAll(selector);
            let truncated = [];
            for(i=0;i<element.length;i++) {
                truncated[i] = element[i].innerText;
                if(truncated[i].length > maxLength) {
                    truncated[i] = truncated[i].substr(0, maxLength) + '...';
                }
            }
            return truncated;
        }
        const mantapall = document.querySelectorAll('.judul');
        mantapall.forEach((m, i) => {
            m.innerText = truncateText('.judul', 30)[i];
        });

        const deskripsi = document.querySelectorAll('.keterangan');
        deskripsi.forEach((m, i) => {
            m.innerText = truncateText('.keterangan', 180)[i];
        });

        
    </script>


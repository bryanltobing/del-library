<!DOCTYPE html>
<html lang="en">
    
    <%- include('../partials/head') %>

    <style>
        .formRequest {
            -webkit-box-shadow: 0 0 10px gray;
            box-shadow: 0 0 10px gray;
            margin-top: 40px;
            margin-bottom: 40px;
        }
        .formRequest2 {
            -webkit-box-shadow: 0 0 10px gray;
            box-shadow: 0 0 10px gray;
            margin-top: 40px;
            margin-bottom: 40px;
            border: 4px solid #282828;
        }
    </style>
    <body>
        
        <!-- Start: Header Section -->
        <%- include('../partials/navbar') %>
        <!-- End: Header Section -->
        
        <!-- Start: Page Banner -->
        <section class="page-banner services-banner">
            <div class="container">
                <div class="banner-header">
                    <h2>Add CD || DVD</h2>
                    <span class="underline center"></span>
                    <p style="padding: 20px;" class="lead"></p>
                </div>
                <div class="breadcrumb">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/user/addmedia-menu">Media Menu</a></li>
                        <li>Add CD || DVD</li>
                    </ul>
                </div>
            </div>
        </section>
        <!-- End: Page Banner -->

        <!-- Start: Products Section -->
        <div class="container formRequest" style="padding: 20px;">
            <div class="row">
                <div class="col-md-12">
                    <div class="contact-form bg-light margin-right">
                            <h2 style="color: black;">Add CD || DVD</h2>
                            <span class="underline left"></span>
                            <div class="contact-fields">
                            <form action="/user/add-dvd" style="padding: 20px;" id="contact" name="contact" method="post" >
                                <div class="row">
                                    <div class="col-md-6 col-sm-6">
                                        <div class="form-group">
                                            <input class="form-control" type="text" placeholder="judul" name="judul" id="judul" size="30" value="" aria-required="true"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-6">
                                        <div class="form-group">
                                            <input class="form-control" type="text" placeholder="sumber" name="sumber" id="sumber" size="30" value="" aria-required="true"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-6">
                                        <div class="form-group">
                                            <select name="prodiPemilik" id="prodiPemilik" class="form-control">
                                                <option value="">--- Prodi ---</option>
                                                <option value="D3 Teknologi Informasi">D3 Teknologi Informasi</option>
                                                <option value="D3 Teknologi Komputer">D3 Teknologi Komputer</option>
                                                <option value="D4 Teknologi Rekayasa Perangkat Lunak">D4 Teknologi Rekayasa Perangkat Lunak</option>
                                                <option value="S1 Informatika">S1 Informatika</option>
                                                <option value="S1 Sistem Informasi">S1 Sistem Informasi</option>
                                                <option value="S1 Teknik Elektro">S1 Teknik Elektro</option>
                                                <option value="S1 Teknik Bioproses">S1 Teknik Bioproses</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <textarea class="form-control" placeholder="keterangan" id="keterangan" name="keterangan" rows="10" aria-required="true"></textarea>
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group form-submit">
                                            <input style="background-color: black;" class="btn btn-default" id="cd_dvd-book-form" type="submit" name="submit" value="Tambah CD || DVD"  />
                                        </div>
                                    </div>

                                </div>
                            </form> 
                        </div> 
                    </div>
                </div>
            </div>
        </div>
        <!-- End: Products Section -->
       
        
        <!-- Start: Footer -->
        <%- include('../partials/footer') %>

        <!-- End: Footer -->
        
        <%- include('../partials/footscript') %>

        
    </body>


</html>

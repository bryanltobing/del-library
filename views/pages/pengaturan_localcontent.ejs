                                                                                                                      <label class="form-check-label" for="prodi2">
                                                                                                                        Proyek Akhir 1
                                                                                                                      </label>
                                                                                                                    </div>
                                                                                                                    <div class="form-check">
                                                                                                                      <input class="form-check-input" type="radio" name="jenis" id="jenis3" value="Proyek Akhir 2">
                                                                                                                      <label class="form-check-label" for="prodi3">
                                                                                                                        Proyek Akhir 2
                                                                                                                      </label>
                                                                                                                    </div>
                                                                                                                    <div class="form-check">
                                                                                                                      <input class="form-check-input" type="radio" name="jenis" id="jenis4" value="Proyek Akhir 3">
                                                                                                                      <label class="form-check-label" for="prodi4">
                                                                                                                        Proyek Akhir 3
                                                                                                                      </label>
                                                                                                                    </div>
                                                                                                                    <div class="form-check">
                                                                                                                      <input class="form-check-input" type="radio" name="jenis" id="jenis5" value="Tugas Akhir">

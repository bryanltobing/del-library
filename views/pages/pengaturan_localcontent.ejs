                                                                        <% } else { %>
                                                                            <% if(!keywords) {%>
                                                                                <li><a href="/user/pengaturan/localcontent/<%= pages %>">Last</a></li>
                                                                            <%} else {%>
                                                                                <li><a href="/user/pengaturan/localcontent/<%= pages %>?keywords=<%=keywords%>">Last</a></li>
                                                                            <%}%>
                                                                        <% } %>
                                                                    </ul>
                                                                <% } %>
                                                            </div>
                                                        </nav>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div><!-- .entry-content -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <!-- End -->
    
    
    
    <%- include('../partials/footer') %>
    
    
    <%- include('../partials/footscript') %>


    <script>
        
        const form = document.querySelectorAll('.updateForm');

        form.forEach((theform, index) => {
            
            $(`#update-localcontent-form${index}`).on('click', function () {
                console.log("wow");
                if ($(`#judul${index}`).val() === '' ||  $(`#subject${index}`).val() === '' || $(`#penulis${index}`).val() === '' || $(`#pembimbing${index}`).val() === '' || $(`#tahun${index}`).val() === '' || $(`#tingkat${index}`).val() === '' ) {
                    swal({
                        title : "Warning",
                        icon: "warning",
                        text : "Data form wajib diisi",
                        button: "Okay",
                    });
                    return false;
                } 

                return true;
            });
        });
        


        const buttonDelete =  document.querySelectorAll('.deleteButton');
        buttonDelete.forEach((button, i) => {
            button.addEventListener('click', (e) => {
                e.preventDefault();
                swal({
                    title: "Are you sure?",
                    text: "Data akan dihapus secara permanen dan tidak dapat dipulihkan",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                })
                .then((willDelete) => {
                    if (willDelete) {
                        var form = document.querySelectorAll(".deleteForm");
                        form[i].submit();
                    } else {
                        return false;
                    }
                });
            });
        });

    </script>



    <script>
        function truncateText(selector, maxLength) {
            var element = document.querySelectorAll(selector);
            let truncated = [];
            for(i=0;i<element.length;i++) {
                truncated[i] = element[i].innerText;
                if(truncated[i].length > maxLength) {
                    truncated[i] = truncated[i].substr(0, maxLength) + '...';
                }
            }
            return truncated;
        }
        const mantapall = document.querySelectorAll('.judul');
        mantapall.forEach((m, i) => {
            m.innerText = truncateText('.judul', 80)[i];
        });
        
    </script>


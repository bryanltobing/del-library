                                                                                    <li><a href="/user/pengaturan/localcontent/<%= i %>"><%= i %></a></li>
                                                                                <%} else {%>
                                                                                    <li><a href="/user/pengaturan/localcontent/<%= i %>?keywords=<%=keywords%>"><%= i %></a></li>
                                                                                <%}%>
                                                                            <% } %>
